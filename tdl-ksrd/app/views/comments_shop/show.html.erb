<div class="container">
  <h1 class="center">Comentarios</h1>
  <% @comments.each do |comment| %>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <b>
            <%= comment.name %>
          </b>
          <div class="pull-right">
            <%= comment.created_at.strftime('%d-%m-%Y %H:%Mhs') %>
          </div>
        </div>
        <div class="panel-body">
          <p>
            <%= comment.content %>
          </p>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-2">
              <b>
                <%= comment.email %>
              </b>
            </div>
          </div>
        </div>
      </div>
    </div>
 <% end %>
</div>
